<div class="container">
  <div class="row info-starship">
    <div class="col-sm-8 info-starship-card">
      <h3 class="text-left"><%= @starship.name %></h3>
      <div class="info-starship-img">
        <% @starship.photos.each do |photo|%>
          <%= cl_image_tag photo.key, height: 200, width: 350, crop: :fill%>
        <% end %>
      </div>

      <h4>Pickup city</h4>
      <%= @starship.pickup_city%>
      <p></p>
      <h4>Price per day</h4>
      <p><%= @starship.price_per_day%> CHF</p>
      <p></p>
      <h4>Owner</h4>
      <p><%= User.find(@starship.loaner_id).first_name %> <%= User.find(@starship.loaner_id).last_name %></p>
      <div class="info-starship-bubble">
        <p> <%= @starship.description %></p>
      </div>
      <div class="info-starship-bubble">
      <h6> Reviews: </h6>
      <ul class="list-group">
        <%@starship.reviews.each do |review| %>
          <li class= "list-group-item"><%= review.content%> - <%= review.rating %></li>
        <%end%>
      </ul>
      </div>
      <div class="d-flex justify-content-end">
      <button type="button" class="btn btn-primary">
      <%=link_to "Reserve this starship", new_starship_rental_path(@starship) %>
      </button>
      </div>
    </div>
    <div class="col-sm-4 info-starship-map sticky-bottom">
      <div style="width: 90%; height: 700px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
